  <body>
      <div class="center">	
          <div class="row">
          <h2><strong>Input your information </strong> <br/></h2><br/>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <!-- Start form -->
                            <form id="AddUser" name="signup" method="post" action="/signup">
                              <div class="form-group">
                                  <label for="exampleInputEmail1">Nom complet</label>
                                  <input type="text" class="form-control" id="inputName"   placeholder="Votre nom complet" name="name">
                                </div>
                              <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input type="email" class="form-control" id="inputEmail"  aria-describedby="emailHelp" placeholder="useremail" name="email">
                              </div>
                              <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" class="form-control" name="password" id="inputPasswrd" placeholder="password">
                              </div>
                              <div class="form-group">
                                <label >Type de compte</label>
                                <select class="form-control form-control-sm" name="typecompte" id="typecompte">
                                  <option type="text" id="client" value="client">Client</option>
                                  <option type="text" id="agent" value="agent">Agent</option>
                                </select>
                              </div>
                              <div class="form-check">
                                <button type="submit" class="btn btn-primary btn-lg" id="btnSubmit">Submit</button>
                              </div>
                              
                            </form>
        
        
              <!-- End form -->
            </div>
            
          
            
          </div>
        </div>
