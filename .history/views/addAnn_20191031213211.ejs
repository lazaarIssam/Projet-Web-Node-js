  <body>
        <div class="center">	
                <div class="row">
                <h2><strong>Insertion d'annonce </strong> <br/></h2><br/>
                  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <!-- Start form -->
                                  <form id="AddUser" name="signup" method="post" action="/signup">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Titre</label>
                                        <input type="text" class="form-control" id="inputtitre"   placeholder="titre" name="titre">
                                      </div>
                                      <div class="form-group">
                                            <label >Type de bien</label>
                                            <select class="form-control form-control-sm" name="typedebien" id="typedebien">
                                              <option type="text" id="client" value="vente">à la vente</option>
                                              <option type="text" id="agent" value="location">à la location</option>
                                            </select>
                                          </div>
                                    <div class="form-group">
                                      <label for="exampleInputEmail1">Description </label>
                                      <input type="text" class="form-control" id="inputdescription "   placeholder="description " name="description ">
                                    </div>
                                    <div class="form-group">
                                            <label class="control-label">Prix</label>
                                            <div class="form-group">
                                              <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                  <span class="input-group-text">£</span>
                                                </div>
                                                <input type="number" name="prix" class="form-control" aria-label="Amount (to the nearest dollar)">
                                              </div>
                                            </div>
                                            <div class="form-group">
                                              <label for="example-date-input" class="col-2 col-form-label">Date</label>
                                              <input name ="dateAv"class="form-control" type="date" value="2011-08-19" id="example-date-input">
                                          </div>  
                                    <div class="form-check">
                                      <button type="submit" class="btn btn-primary btn-lg" id="btnSubmit">Submit</button>
                                    </div>
                                    
                                  </form>
              
              
                    <!-- End form -->
                  </div>
                  
                
                  
                </div>
